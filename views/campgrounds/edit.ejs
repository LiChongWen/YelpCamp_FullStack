<% include ../partials/header %>

<!-- <div class="container"> -->
    <div class="row">
        <h1 style="text-align: center;">Edit Campground: <%= campground.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" >
                <div class="form-group">
                    <input class="form-control" type="text" name="updatedCamp[name]" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                        <input class="form-control" type="number" name="updatedCamp[price]" value="<%= campground.price %>" min="0.1" step="0.1">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="updatedCamp[image]" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                        <input class="form-control" type="text" name="updatedCamp[description]" value="<%= campground.description %>">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="updatedCamp[location]" id="location" value="<%= campground.location %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
       
    </div>
    
<!-- </div> -->
<% include ../partials/footer %>