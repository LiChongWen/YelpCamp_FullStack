<% include ../partials/header %>

<!-- <div class="container"> -->
    <div class="row">
        <h1 style="text-align: center;">Creat a New Campground</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST" >
                <div class="form-group">
                    <input class="form-control" type="text" name="newCampground[name]" placeholder="Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="newCampground[image]" placeholder="img url">
                </div>
                <div class="form-group">
                        <input class="form-control" type="text" name="newCampground[descrip]" placeholder="Description">
                </div>
                <div class="form-group">
                        <input class="form-control" type="number" name="newCampground[price]" placeholder="Price" min="0.1" step="0.1">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="newCampground[location]" id="location" placeholder="Yosemite National Park, CA">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
       
    </div>
    
